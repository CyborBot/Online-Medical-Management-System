<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit customer Details</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/medics/customer/<%=customer._id%>?_method=PUT" method="POST" novalidate class="validatedform ">
                <div class="mb-3">
                    <label class="form-label" for="title">Customer Name</label>
                    <input class="form-control" type="text" id="title" name="customer[cstname]" value="<%=customer.cstname %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Customer Address</label>
                    <input class="form-control" type="text" id="location" name="customer[cstaddress]" value="<%=customer.cstaddress %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="buy">Medicine Buy</label>
                    <input class="form-control" type="text" id="buy" name="customer[cstbuy]" value="<%=customer.cstbuy %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="code">Customer Code</label>
                    <input class="form-control" type="number" id="code" name="customer[cstcode]" value="<%=customer.cstcode %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Customer Phone Number</label>
                    <div class="input-group">

                        <input type="number" class="form-control" id="price" aria-label="price" aria-describedby="price-label" name="customer[cstphone]" value="<%=customer.cstphone%>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Enter Your Customer image url</label>
                    <input class="form-control" type="text" id="image" name="customer[cstimage]" value="<%=customer.cstimage %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Total Price</label>
                    <textarea class="form-control" type="text" id="description" name="customer[cstprice]" required><%= customer.cstprice%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Customer Details</button>
                </div>
            </form>
            <a href="/medics/<%= customer._id%>">Back To View customer</a>
        </div>
    </div>