<%layout('layouts/boilerplate')%>
    <div class="container">
        <h1>Dealers</h1>
        <% for (let med of medical){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=med.image%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= med.title %>
                            </h5>
                            <p class="card-text">
                                <%= med.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted"><%= med.location%></small>
                            </p>
                            <a class="btn btn-primary" href="/medics/<%= med._id %>">View <%=med.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>