<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Employee Details</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/medics/employee/<%=employee._id%>?_method=PUT" method="POST" novalidate class="validatedform ">
                <div class="mb-3">
                    <label class="form-label" for="title">Employee Name</label>
                    <input class="form-control" type="text" id="title" name="employee[empname]" value="<%=employee.empname %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Employee Address</label>
                    <input class="form-control" type="text" id="location" name="employee[empaddress]" value="<%=employee.empaddress %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Employee Salary</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="employee[empprice]" value="<%=employee.empprice %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="code">Employee Code</label>
                    <input class="form-control" type="number" id="code" name="employee[empcode]" value="<%=employee.empcode %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Employee Phone Number</label>
                    <div class="input-group">

                        <input type="number" class="form-control" id="price" aria-label="price" aria-describedby="price-label" name="employee[empphone]" value="<%=employee.empphone%>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Enter Your Employee image url</label>
                    <input class="form-control" type="text" id="image" name="employee[empimage]" value="<%=employee.empimage %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Employee Description</label>
                    <textarea class="form-control" type="text" id="description" name="employee[empdescription]" required><%= employee.empdescription%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Employee Details</button>
                </div>
            </form>
            <a href="/medics/<%= employee._id%>">Back To View Employee</a>
        </div>
    </div>