<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Enter New Employee Details</h1>
        <div class="col-6 offset-3">
            <form action="/medics/employee" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Enter Employee Name</label>
                    <input class="form-control" type="text" id="title" name="employee[empname]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="empcode">Enter Employee Code</label>
                    <input class="form-control" type="number" id="empcode" name="employee[empcode]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Enter Employee Salary</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="number" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="employee[empprice]" required>
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="phone">Enter Employee Phone Number</label>
                    <input class="form-control" type="number" id="phone" name="employee[empphone]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="address">Enter Employee Address</label>
                    <input class="form-control" type="text" id="address" name="employee[empaddress]" required>
                    <div class="valid-feedback ">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Enter Employee Image Url</label>
                    <input class="form-control" type="text" id="image" name="employee[empimage]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3 ">
                    <label class="form-label " for="description">Enter Employee Description</label>
                    <textarea class="form-control " type="text " id="description " name="employee[empdescription]" required></textarea>
                    <div class="valid-feedback ">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3 ">
                    <button class="btn btn-success ">Add Employee</button>
                </div>
            </form>

        </div>
    </div>