<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Enter New Dealer Details</h1>
        <div class="col-6 offset-3">
            <form action="/medics" method="POST" novalidate class="validatedform">
                <div class="mb-3">
                    <label class="form-label" for="title">Enter Dealer Name</label>
                    <input class="form-control" type="text" id="title" name="medical[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Enter Dealer Address</label>
                    <input class="form-control" type="text" id="location" name="medical[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Enter Dealer Monthly Income</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="medical[price]" required>
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Enter Dealer Number</label>
                    <input class="form-control" type="phone" id="location" name="medical[phone]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Enter Your Shop image url</label>
                    <input class="form-control" type="text" id="image" name="medical[image]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                    </div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="medical[description]" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Dealer</button>
                </div>
            </form>

        </div>
    </div>