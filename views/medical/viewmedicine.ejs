<%layout('layouts/boilerplate')%>
    <div class="container">
        <h1>Medicines Available</h1>
        <% for (let med of medicine){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=med.medimage%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= med.medname %>
                            </h5>
                            <p class="card-text">
                                <%= med.meddescription %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted"><%= med.medstock%></small>
                            </p>
                            <a class="btn btn-primary" href="/medics/medicine/<%= med._id %>">View <%=med.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>