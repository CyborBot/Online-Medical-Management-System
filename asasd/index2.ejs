<%layout('layouts/boilerplate')%>
    <div class="container">
        <% for (let med of medics){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%=med.medimage%>" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= med.medname %>
                            </h5>
                            <p class="card-text">
                                <%= med.meddescription %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted"><%= med.meddealer%></small>
                            </p>
                            <a class="btn btn-primary" href="/medics/<%= med._id %>">View <%=med.medname%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>